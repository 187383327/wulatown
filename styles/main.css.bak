@charset "UTF-8";
.container {
	min-width:1024px;
	text-align:center;
	width:expression(document.body.clientWidth < 1024? "1024px": "auto" ); 
}
a {
	color: #ffffff;
	text-decoration: none;
}
a:hover {
	color: #FFD543;
	text-decoration:underline;
}
.a-footer {
	color: #a4a4a4;
	text-decoration: none;
}
.a-footer:hover {
	color: #FFA414;
	text-decoration:underline;
}
body {
	font-family:"Microsoft Yahei", Aril;
	font-size: 14px;
	text-decoration:none;
	margin:0px;
}
.fr {
	float:right;
}
.fl {
	float:left;
}
.image-box1{width:350px;overflow:hidden;float:left;}
.image-box1 img{transition:0.5s;}
.image-box1:hover img{
-moz-transform:scale(1.2,1.2); 
 -webkit-transform:scale(1.2,1.2); 
 -o-transform:scale(1.2,1.2); 
transition: 0.5s;  }
.tal {
	text-align:left;
}
.ma {
	margin:auto;
}
.width-998 {
	width: 998px;
}
.ma.width-998 > div{position:relative;}
.ma.width-998 > div > p{position:absolute;z-index:9;}
.ma.width-998 .div_box{background:rgba(0,0,0,0.3);width:180px;height:180px;position:absolute;
left:0px;top:0px;border-radius:50%;display:none;transition:all 0.5s;z-index:0;}
.ma.width-998 > div:hover > .div_box{display:block;top:0px;}
.title {
	font-size:26px;
	color:#FFA414;
}
.subtitle {
	font-size:18px;
	color:#a4a4a4;
}
.content {
	font-size:14px;
	color:#646464;
	margin-top: 12px;
	margin-bottom: 14px;
}
.title-news {
	font-size:18px;
	color:#363636;
}
.subtitle-news {
	font-size:16px;
	color:#a4a4a4;
	margin-top: 16px;
}
.content-news {
	font-size:16px;
	color:#646464;
	margin-top: 28px;
	margin-bottom: 14px;
	line-height: 34px;
	width:600px;
}
/* CSS header */
.header {
	position:fixed;
	height:88px;
	width:100%;
	background-color:rgba(255, 255, 255, 0.96);
	top:0px;
	z-index:999;
	text-align:center;
	-moz-box-shadow:1px 1px 2px 0px rgba(0, 0, 0, 0.1);
	-webkit-box-shadow:1px 1px 2px 0px rgba(0, 0, 0, 0.1);
	box-shadow:1px 1px 2px 0px rgba(0, 0, 0, 0.1);
}
.div-header-wirte {
	background-color:#ffffff;
	position:fixed;
	margin-top:0px;
	height:50px;
	width:100%;
}
.div-header-btnBox {
	width: 998px;
	height: 50px;
	margin:25px auto;
	left:50%;
}
.div-header-btnBox a {
	text-decoration:none;
	font-size:18px;
	color:#646464;
	margin-left:10px;
}
.div-header-btnBox a:hover {
	color: #f68c00;
}
.img-header-logo {
	position:relative;
	left: -430px;
	top:-88px;
	height:63px;
	width:170px;
	
}
.button-base{
	
	border:none;
	display:block;
	padding: 0px 30px;
	height: 46px;
	display:inline;
	margin:0 22px;
  	line-height:46px;
	text-align:center;	
	display:inline-block;
}
.button-selected {
	line-height:38px;
	height:46px;
	border:1px solid #ffd62e;
	font-size:28px;
	-webkit-border-radius:10px;
	-moz-border-radius:10px;
	border-radius:10px;
	-moz-box-shadow:1px 1px 1.5px 0px rgba(0, 0, 0, 0.1);
	-webkit-box-shadow:1px 1px 1.5px 0px rgba(0, 0, 0, 0.1);
	box-shadow:1px 1px 1.5px 0px rgba(0, 0, 0, 0.1);
	text-align:center;
	display:inline-block;
	text-decoration:none;
}

.button-selected a{
	color:#ffd62e;
	font-size:20px;
	margin-left:0;
}
.button-selected a:hover{
	color:#ffd62e;
	margin-left:0
}
.button-header-1 {
	margin-left:210px;
}
.div-header-tel {
	position: absolute;
	font-size: 14px;
	color: #999999;
	top: 19px;
	right: 284px;
}
.div-header-com {
	position: absolute;
	font-size: 14px;
	color: #999999;
	top: 16px;
	right: 18px;
}
/* CSS footer */
.footer {
	position:absolute;
	height:124px;
	width:100%;
	background-color:#ffffff;
	text-align:center;
	border: 0 none;
	border-top:1px solid #cfcfcf;
}
.div-footer-intro {
	margin-top: 24px;
	font-size: 14px;
	color: #a4a4a4;
	line-height:20px;
}