@charset "UTF-8";
/* CSS main */
.main {
	width:100%;
}
.div-main-news {
	width:100%;
	height:480px;
	background-position: center;
	background-repeat: no-repeat;
	background-image:url(../imgs/news_banner.jpg);
	position:relative;
	text-align:center;
}
.div-main-news div {
	background-color:rgba(255,213,67,0.9);
	font-size:22px;
	color:#ffffff;
	width:998px;
	height:60px;
	margin:auto;
	line-height:60px;
	text-align:left;
	text-indent: 1em;
}
.main hr {
  	border: 0 none;
	border-bottom:2px solid #f4f4f4;
}
.div-main-contect-news {
}
.div-main-news-title-box {
	text-align:left;
	height:79px;
}
.div-main-news-title-box-t {
	display:inline-block;
	margin:32px 0px 24px 22px;
}
.div-main-news-title-box-c {
	display:inline-block;
	margin:32px 0px 24px 8px;
}
.div-main-news-info-box {
	margin-top:28px;
	height:230px;
}
.div-main-news-info-box-list {
	width: 476px;
	margin-left: 36px;
}